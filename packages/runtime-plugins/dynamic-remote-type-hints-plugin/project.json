{
  "name": "dynamic-remote-type-hints-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/dist",
        "main": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/src/index.ts",
        "tsConfig": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/tsconfig.lib.json",
        "assets": [],
        "external": ["@module-federation/*"],
        "project": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/package.json",
        "rollupConfig": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/rollup.config.js",
        "compiler": "swc",
        "format": ["cjs", "esm"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/runtime-plugins/dynamic-remote-type-hints-plugin/**/*.ts",
          "packages/runtime-plugins/dynamic-remote-type-hints-plugin/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/runtime-plugins/dynamic-remote-type-hints-plugin/jest.config.js",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "pre-release": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run dynamic-remote-type-hints-plugin:test",
            "forwardAllArgs": false
          },
          {
            "command": "nx run dynamic-remote-type-hints-plugin:build",
            "forwardAllArgs": false
          }
        ]
      }
    }
  },
  "tags": ["type:pkg"]
}
